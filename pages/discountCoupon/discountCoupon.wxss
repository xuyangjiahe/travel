/* pages/ discountCoupon/ discountCoupon.wxss */
page{
  width: 100%;
  height: 100%;
}
.coupon {
  position: relative;
  top:0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background-color:#F9EEDC; 
}
.status-bar {
  position: absolute;
  top:20rpx;
  left: 0;
  width: 100%;
  height: 96rpx;
  z-index: 2;
}
.login_out_btn {
  position: absolute;
  top:20rpx;
  left: 0;
  display: block;
  width: 22rpx;
  height: 40rpx;
  margin-left:30rpx;
  margin-top:28rpx;
  cursor: pointer;
  z-index: 9;
}
.login_bg {
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  z-index: 2;
}
.coupon_main {
  position: relative;
  width: 100%;
  height: 100%;
}
.bg {
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}
.user_info {
  position: absolute;
  top: 140rpx;
  left: 50rpx;
  width: 340rpx;
  height: 110rpx;
  z-index: 2;

}
.head_icon {
  position: absolute;
  top: 20rpx;
  left: 13rpx;
  z-index: 2;
  display: inline-block;
  width:82rpx;
  height:82rpx;
  border-radius:6rpx;
  margin-right: 22rpx;
  vertical-align: middle;
}
.info {
  position: absolute;
  top: 6rpx;
  left: 120rpx;
  z-index: 9;
  display: inline-block;
  width: 220rpx;
  height: 110rpx;
  vertical-align: middle;
}
.name {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 2;
  display: block;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:#fff;
  line-height:70rpx;
}
.num {
  position: absolute;
  top: 56rpx;
  left: 0rpx;
  z-index: 2;
  display: block;
  width: 100%;
  height: 48rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.sub_btn {
  position: absolute;
  top:77%;
  left: 50%;
  transform: translateX(-50%);
  width:541rpx;
  height:98rpx;
  background:-webkit-linear-gradient(-90deg,rgba(250,100,36,1) 0%,rgba(255,68,49,1) 100%);
  /* background: gray; */
  background: rgba(250,100,36,1);
  border-radius:14rpx;
  font-size:42rpx;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:#fff;
  line-height:98rpx;
  cursor: pointer;
  text-align: center;
  z-index: 2;
  
}
.btn_text {
  width: 100%;
  height: 100%;
  line-height:98rpx;
  text-align: center;
  cursor: pointer;
}
.tip {
  position: absolute;
  bottom: 38rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:50rpx;
  text-align: center;
  z-index: 2;
}
.logo{
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.tip_text {
  display: inline-block;
  height: 36rpx;
  line-height: 36rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.canvas_box{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  /* display: none; */
}